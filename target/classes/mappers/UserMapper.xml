<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.UserMapper">

    <select id="login" resultType="UserDTO">
        select * from tbl_user
        where userId = #{userId}
    </select>

    <insert id="insertMember">
        insert into tbl_user(userId,pw,name)
        values(#{userId},#{pw},#{name})
    </insert>

    <insert id ="insertAuth">
        insert into tbl_authorities
        values(#{userId},#{auth})
    </insert>

    <select id = "getUserId" resultType="UserDTO">
        select userId from tbl_user
        where userId = #{userId}
    </select>

    <select id = "getUserPw">
        select pw from tbl_user
        where userId = #{userId}
    </select>

    <delete id = "deleteMember">
        delete from tbl_user where pw = #{pw}
    </delete>

    <delete id ="deleteAllMember" parameterType="String">
        delete from tbl_user
        where userId = #{userId}
    </delete>

    <update id="changePw" parameterType="map">
        update tbl_user
        set pw = #{pw}
        where userId = #{userId}
    </update>

    <update id ="setProfile">
        update tbl_user
        set profileImg = #{profileImg}
        where userId = #{userId}
    </update>

    <select id ="getUserList" resultType ="UserDTO">
        <![CDATA[
		select * from
			tbl_user
		]]>
        <![CDATA[
		order by join_date desc
		limit #{pageStart}, #{perPageNum}
		]]>
    </select>

